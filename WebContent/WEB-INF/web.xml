<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>HospitalManagementSystem</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>

  <servlet>
    <servlet-name>alogin</servlet-name>
    <servlet-class>action.alogin</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>dlogin</servlet-name>
    <servlet-class>action.dlogin</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>updatestatus</servlet-name>
    <servlet-class>action.updatestatus</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>updatedoc</servlet-name>
    <servlet-class>action.updatedoc</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Appointment</servlet-name>
    <servlet-class>action.Appointment</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RegisterAction</servlet-name>
    <servlet-class>action.RegisterAction</servlet-class>
  </servlet>


  <servlet-mapping>
    <servlet-name>alogin</servlet-name>
    <url-pattern>/alogin</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>dlogin</servlet-name>
    <url-pattern>/dlogin</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>updatestatus</servlet-name>
    <url-pattern>/updatestatus</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>updatedoc</servlet-name>
    <url-pattern>/updatedoc</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Appointment</servlet-name>
    <url-pattern>/Appointment</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RegisterAction</servlet-name>
    <url-pattern>/RegisterAction</url-pattern>
  </servlet-mapping>
</web-app>